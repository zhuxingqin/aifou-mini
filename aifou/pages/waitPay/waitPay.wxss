/* pages/waitPay/waitPay.wxss */

page {
  background-color: #f9f9f9;
}

.waitPayPage .addressBox {
  display: flex;
  height: 100rpx;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
}
.waitPayPage .addressBox .msg{
  width: 89%;
}
.waitPayPage .addressBox image {
  width: 60rpx;
  height: 60rpx;
}
.waitPayPage .addressBox .name{
  font-size: 30rpx;
  float: left;
}
.waitPayPage .addressBox .phone{
  font-size: 30rpx;
  float: right;
}
.waitPayPage .addressBox .address{
  font-size: 27rpx;
  color: #797979;
  line-height: 45rpx;
}
.waitPayPage .line{
  display: flex;
  justify-content: center;
}
.waitPayPage .line>view{
  height: 5rpx;
  margin-left: 4rpx;
  flex: 1;
}
.waitPayPage .line .red{
  background-color: #FF5C5C;
}
.waitPayPage .line .blue{
  background-color: #5799FA;
}
.waitPayPage .store{
  margin-top: 20rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}
.waitPayPage .store>image{
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}
.waitPayPage .store>text{
  font-size: 30rpx;
  display: inline-block;
}
.waitPayPage .good{
  padding: 10rpx 0;
  border-bottom: dashed 1px #f1f1f1;
  display: flex;
}
.waitPayPage .good image{
  width: 180rpx;
  height: 180rpx;
}
.waitPayPage .msgBox{
  width: 70%;
}
.waitPayPage .msgBox .top{
  font-size: 28rpx;
}
.waitPayPage .msgBox .bottom{
  font-size: 28rpx;
  color: #797979;
  line-height: 50rpx;
}
.waitPayPage .msgBox .price,.waitPayPage .msgBox .count{
  float: right;
}
.waitPayPage .courier{
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 1px #f1f1f1;
}
.waitPayPage .courier .left{
  font-size: 30rpx;
}
.waitPayPage .courier .right{
  font-size: 28rpx;
  color: #797979;
}
.waitPayPage .courier .right>text{
  display: block;
}
.waitPayPage .note{
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: solid 1px #f1f1f1;
}
.waitPayPage .note>text{
  display: inline-block;
  width: 15%;
  font-size: 30rpx;
}
.waitPayPage .note>input{
  width: 85%;
  display: inline-block;
  height: 50rpx;
  font-size: 30rpx;
}
.waitPayPage .total{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  font-size: 30rpx;
}
.waitPayPage .total>.price{
  color: #6cbe74;
}
.waitPayPage .discount{
  padding: 20rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  font-size: 30rpx;
  margin-top: 20rpx;
  height: 50rpx;
}
.waitPayPage .discount .arrow{
  position: absolute;
  top: 38rpx;
  right: 20rpx;
  border-right: solid 2px #cdcdcd;
  border-top: solid 2px #cdcdcd;
  height: 15rpx;
  width: 15rpx;
  float: right;
  transform: rotateZ(45deg);
}
.waitPayPage .priceType{
  font-size: 30rpx;
  background-color: #fff;
  padding: 20rpx;
  margin: 20rpx 0 150rpx 0;
}
.waitPayPage .priceType view{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.waitPayPage .priceType view>text{
  line-height: 45rpx;
}
.waitPayPage .payBar{
 position: fixed;
 bottom: 0;
 right: 0;
 width: 100%;
 height: 100rpx;
 background-color: #fff; 
 display: flex;
 align-content: center;
 box-shadow: 0 0 10rpx #f1f1f1;
}
.waitPayPage .payBar>.L{
  width: 70%;
  text-align: right;
  font-size: 32rpx;
  line-height: 100rpx;
  padding-right: 20rpx;
}
.waitPayPage .payBar>.L>.price{
  color: #6cbe74;
}
.waitPayPage .payBar>.R{
  background-color: #6cbe74;
  width: 30%;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 35rpx;
}